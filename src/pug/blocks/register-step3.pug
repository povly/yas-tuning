.auth
  .auth__bg.auth__bg-left.img_full
    +picture({
      src: '/images/auth/bg.png',
      width: 1031,
      height: 920,
      formats: [
        {
          type: 'avif',
          src: '/images/auth/bg.avif',
        },
        {
          type: 'webp',
          src: '/images/auth/bg.webp',
        },
      ]
    })
  .auth__bg.auth__bg-right.img_full
    +picture({
      src: '/images/auth/mask.png',
      width: 687,
      height: 920,
      formats: [
        {
          type: 'avif',
          src: '/images/auth/mask.avif',
        },
        {
          type: 'webp',
          src: '/images/auth/mask.webp',
        },
      ]
    })
  .container
    .auth__item
      .auth__item-bg.img_full
        +picture({
          src: '/images/auth/form.png',
          width: 893,
          height: 579,
          formats: [
            {
              type: 'avif',
              src: '/images/auth/form.avif',
            },
            {
              type: 'webp',
              src: '/images/auth/form.webp',
            },
          ]
        })
      form.auth__form
        .auth__title REGISTRATION

        .auth__steps
          .auth__step.active
            .auth__inputs
              .auth__input
                label(for='country').auth__label
                  span Country*
                select.auth__select(id='country' name='country' required)
                  option(value='') Select country
                  option(value='US' selected) United States
                  option(value='CA') Canada
                  option(value='GB') United Kingdom
                  option(value='AU') Australia
                  option(value='NZ') New Zealand

              .auth__input
                label(for='city').auth__label
                  span City*
                input.auth__input-field(type='text' id='city' name='city' required value='New York')

              .auth__input
                label(for='address').auth__label
                  span Address*
                input.auth__input-field(type='text' id='address' name='address' required value='123 Main Street')

              .auth__input
                label(for='postal-code').auth__label
                  span Postal code*
                input.auth__input-field(type='text' id='postal-code' name='postal_code' required value='10001')

        button.auth__btn.p-btn.p-btn_orange(type='submit') Complete Registration
