.auth
  .auth__bg.auth__bg-left.img_full
    +picture({
      src: '/images/auth/bg.png',
      width: 1031,
      height: 920,
      formats: [
        {
          type: 'avif',
          src: '/images/auth/bg.avif',
        },
        {
          type: 'webp',
          src: '/images/auth/bg.webp',
        },
      ]
    })
  .auth__bg.auth__bg-right.img_full
    +picture({
      src: '/images/auth/mask.png',
      width: 687,
      height: 920,
      formats: [
        {
          type: 'avif',
          src: '/images/auth/mask.avif',
        },
        {
          type: 'webp',
          src: '/images/auth/mask.webp',
        },
      ]
    })
    +picture({
      src: '/images/auth/mask_tablet.png',
      width: 768,
      height: 1024,
      formats: [
        {
          type: 'avif',
          src: '/images/auth/mask_tablet.avif',
        },
        {
          type: 'webp',
          src: '/images/auth/mask_tablet.webp',
        },
      ]
    })
  .container
    .auth__item
      .auth__item-bg.img_full
        +picture({
          src: '/images/auth/form.png',
          width: 893,
          height: 579,
          formats: [
            {
              type: 'avif',
              src: '/images/auth/form.avif',
            },
            {
              type: 'webp',
              src: '/images/auth/form.webp',
            },
          ]
        })
      form.auth__form(hx-post="/php/register.php" hx-swap="outerHTML" hx-target="closest .auth__item")
        .auth__title REGISTRATION

        // Начальные скрытые поля
        input(type='hidden' name='step' value='1')

        .auth__steps
          .auth__step.active
            .auth__inputs
              .auth__input
                label(for='email').auth__label
                  span Email*
                input.auth__input-field(type='email' id='email' name='email' required)
              .auth__input.auth__input_password
                label(for='password').auth__label
                  span Password*
                input.auth__input-field(type='password' id='password' name='password' required)
              .auth__input.auth__input_password-repeat
                label(for='password-repeat').auth__label
                  span Repeat password*
                input.auth__input-field(type='password' id='password-repeat' name='password_repeat' required)
        button.auth__btn.p-btn.p-btn_orange(type='submit') Next
