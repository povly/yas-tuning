.auth
  .auth__bg.auth__bg-left.img_full
    +picture({
      src: '/images/auth/bg.png',
      width: 1031,
      height: 920,
      formats: [
        {
          type: 'avif',
          src: '/images/auth/bg.avif',
        },
        {
          type: 'webp',
          src: '/images/auth/bg.webp',
        },
      ]
    })
  .auth__bg.auth__bg-right.img_full
    +picture({
      src: '/images/auth/mask.png',
      width: 687,
      height: 920,
      formats: [
        {
          type: 'avif',
          src: '/images/auth/mask.avif',
        },
        {
          type: 'webp',
          src: '/images/auth/mask.webp',
        },
      ]
    })
  .container
    .auth__item
      .auth__item-bg.img_full
        +picture({
          src: '/images/auth/form.png',
          width: 893,
          height: 579,
          formats: [
            {
              type: 'avif',
              src: '/images/auth/form.avif',
            },
            {
              type: 'webp',
              src: '/images/auth/form.webp',
            },
          ]
        })
      form.auth__form
        .auth__title REGISTRATION

        .auth__steps
          .auth__step.active
            .auth__inputs
              .auth__input
                label(for='first-name').auth__label
                  span First name*
                input.auth__input-field(type='text' id='first-name' name='first_name' required value='John')
              .auth__input
                label(for='last-name').auth__label
                  span Last name*
                input.auth__input-field(type='text' id='last-name' name='last_name' required value='Doe')
              .auth__input.auth__input_checkbox
                input(type='checkbox' id='is_company' name='is_company').auth__checkbox.auth__checkbox_is-company
                label(for='is_company').auth__label.auth__checkbox-label
                  span.auth__checkbox-square
                  span.auth__checkbox-text Is company?

        button.auth__btn.p-btn.p-btn_orange(type='submit') Next
